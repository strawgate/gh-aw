---
import octicons from '@primer/octicons';
import Default from '@astrojs/starlight/components/Footer.astro';

const heartIcon = octicons.heart.toSVG({ width: 14, height: 14 });
---

<Default {...Astro.props} />

<div class="github-next-footer">
  <div class="community-feedback">
    <a href="https://github.com/orgs/community/discussions/186451" target="_blank" rel="noopener noreferrer">Community Feedback</a>
  </div>
  <p>
    <span class="footer-main">
      Made with <span class="heart-icon" set:html={heartIcon} /> by <a href="https://githubnext.com/" target="_blank" rel="noopener noreferrer">GitHub Next</a> & <a href="https://www.microsoft.com/en-us/research/" target="_blank" rel="noopener noreferrer">Microsoft Research</a>
    </span>
    <span class="footer-separator" aria-hidden="true">â€¢</span>
    <span class="footer-terms">
      <a href="https://github.com/githubnext/githubnext/blob/main/TERMS_AND_CONDITIONS.md" target="_blank" rel="noopener noreferrer">Terms of Service</a>
    </span>
  </p>
</div>

<style>
  .github-next-footer {
    margin-top: 1rem;
    padding-top: 1rem;
    border-top: 1px solid #21262d;
    text-align: center;
  }

  :global([data-theme='light']) .github-next-footer {
    border-top: 1px solid #e6e8eb;
  }

  .community-feedback {
    margin-bottom: 1rem;
    text-align: center;
  }

  .community-feedback a {
    font-size: 0.875rem;
  }

  .github-next-footer p {
    margin: 0;
    font-size: 0.875rem;
    color: #8d96a0;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.25rem;
    flex-wrap: wrap;
  }

  :global([data-theme='light']) .github-next-footer p {
    color: #656d76;
  }

  .footer-main {
    display: inline-flex;
    align-items: center;
    gap: 0.25rem;
    flex-wrap: wrap;
    justify-content: center;
  }

  .footer-separator {
    margin: 0 0.25rem;
  }

  .footer-terms {
    display: inline-flex;
    align-items: center;
  }

  /* Mobile responsive: stack vertically */
  @media (max-width: 768px) {
    .github-next-footer p {
      flex-direction: column;
      gap: 0.5rem;
    }

    .footer-separator {
      display: none;
    }

    .footer-main,
    .footer-terms {
      text-align: center;
    }
  }

  .heart-icon {
    display: inline-flex;
    align-items: center;
    color: #8b5cf6;
  }

  .heart-icon :global(svg) {
    fill: currentColor;
    display: block;
  }

  .github-next-footer a {
    color: #8d96a0;
    text-decoration: none;
    transition: color 0.2s ease;
    font-weight: 600;
  }

  :global([data-theme='light']) .github-next-footer a {
    color: #656d76;
  }

  .github-next-footer a:hover {
    color: #c06eff;
  }

  :global([data-theme='light']) .github-next-footer a:hover {
    color: #6b46c1;
  }
</style>
